{% extends 'base.html.twig' %}

{% block title %}Hello ConcessionaireController!
{% endblock %}

{% block body %}
	<header>
		<nav class="navbar navbar-light bg-primary">
			<div class="container-fluid">
				<span class="navbar-brand mb-0 h1 text-light">Plateforme de création de concessionaire - Admin</span>
			</div>
		</nav>
	</header>

	<main class="container p-5 index">
		<div class="row">
			<div class="col-md col-sm">
				<h1 class="h1">Création d'un concessionaire auto</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-md col-sm">	
				{{form(form)}}
				</div>
			</div>
		</main>
		<style>
			body {
				background: url('https://www.caution-garantie.fr/img/produits/caution-concessionnaire-automobile.jpg') no-repeat;
				background-size: cover;
				height: 100vh;
			}
			body::before {
				content: '';
				position: absolute;
				top: 0;
				bottom: 0;
				background: black;
				width: 100%;
				opacity: 0.7;
			}
			.index {
				position: relative;
				z-index: 2;
			}
			.h1 {
				color: #e7e7e7;
				text-shadow: 2px 2px black;
			}
			#concessionaire {
				background: #f5f5f58c;
				border-radius: 10px;
				padding: 20px;
			}
		</style>
	{% endblock %}
	{% block javascripts %}
		<script>
			document.addEventListener("click", function () {
document.getElementById('concessionaire_Annuler').window.location = "/showAll";
});
		</script>
	{% endblock %}
